                        android:contentDescription="@string/slider11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button12"
                        style="@style/csoundButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/butt12"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        style="@style/csoundSeekBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slider12"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <SeekBar
                        android:id="@+id/seekBar12"
                        style="@style/csoundSeekBar"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:contentDescription="@string/slider12" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/pad"
            style="@style/csoundButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:text="@string/trackpad" />

        <ScrollView
            android:id="@+id/messageTextSmallScroll"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2">

            <TextView
                android:id="@+id/messageTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="#00ff00"
                android:textSize="10sp"
                android:typeface="monospace" />
        </ScrollView>
    </TableLayout>

    <ScrollView
        android:id="@+id/messages_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="#00ff00"
            android:textSize="10sp"
            android:typeface="monospace" />
    </ScrollView>

    <WebView
        android:id="@+id/help_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <WebView
        android:id="@+id/portal_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
